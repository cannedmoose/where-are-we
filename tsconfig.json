{
  "include": [
    "src/"
  ],
  "compilerOptions": {
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "module": "es6",
    "moduleResolution": "node",
    "target": "es5",
    "jsx": "react",
    "allowJs": true,
    "typeRoots": [
      "node_modules/@types/",
      "./src/@types"
    ]
  }
}
